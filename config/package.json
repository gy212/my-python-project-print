{
  "name": "keyboard-typer",
  "version": "1.1.0",
  "description": "Electron + Python tactical keyboard typer",
  "main": "../src/backend/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win nsis --x64"
  },
  "build": {
    "appId": "com.keyboard.typer",
    "productName": "Keyboard Typer",
    "directories": {
      "output": "../dist/release",
      "buildResources": "../dist/build"
    },
    "files": [
      "../**/*",
      "!../dist/backend_dist/**/*",
      "!../backup/**/*",
      "!../dist/build/**/*",
      "!../*.spec"
    ],
    "extraResources": [
      {
        "from": "../dist/backend_dist/",
        "to": "backend",
        "filter": [
          "backend-service.exe"
        ]
      },
      {
        "from": "../assets/images/support-image.svg",
        "to": "support-image.svg"
      },
      {
        "from": "../assets/images/qr-code.png",
        "to": "qr-code.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3"
  }
}
